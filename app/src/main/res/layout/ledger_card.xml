<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blue_mild"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/ledger_card_attch_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edge_rect"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            tools:text="0" />

        <ImageView
            android:id="@+id/ledger_card_attch_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/str_attachment"
            android:src="@drawable/ic_attachment_black_32dp" />


        <TextView
            android:id="@+id/ledger_card_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/str_date"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/ledger_card_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_00.00"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/ledger_card_drcr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_dr"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/ledger_card_note_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="3"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:text="@string/str_note"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/ledger_card_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_border"
            android:textSize="@dimen/text_size_medium"
            tools:text="00.00" />

    </LinearLayout>


</LinearLayout>
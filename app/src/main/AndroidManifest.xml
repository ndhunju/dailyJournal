<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ndhunju.dailyjournal"
    android:versionCode="8"
    android:versionName="4" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ganesh_book"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name=".controller.NotificationService" />

        <activity
            android:name=".controller.HomeActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.Journal.JournalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.Party.PartyListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.Party.PartyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.Party.PartyInformationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".viewPager.ViewPagerActivity"
            android:screenOrientation="portrait" />

        <!-- https://developers.google.com/drive/android/java-client -->
        <activity
            android:name=".controller.ImportExport.ImportExportActivity"
            android:label="@string/title_activity_import_export"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".controller.LockScreenActivity"
            android:label="@string/title_activity_lock_screen"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ndhunju.dailyjournal"
    android:versionCode="10"
    android:versionName="5.2" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:description="@string/app_descrip"
        android:icon="@drawable/ic_ganesh_book"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name=".controller.NotificationService" />

        <activity
            android:name=".controller.HomeActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.Journal.JournalActivity"
            />
        <activity
            android:name=".controller.Party.PartyListActivityOld"
            />
        <activity
            android:name=".controller.Party.PartyLedgerActivityOld"
             />
        <activity
            android:name=".controller.Party.PartyActivity"
             />
        <activity
            android:name=".viewPager.ViewPagerActivity"
             />

        <!-- https://developers.google.com/drive/android/java-client -->
        <activity
            android:name=".controller.ImportExport.ImportExportActivity"
            android:label="@string/title_activity_import_export"
            >
        </activity>
        <activity
            android:name=".controller.LockScreenActivity"
            android:label="@string/title_activity_lock_screen"
             >
        </activity>
        <!--
            <service android:name=".controller.NotificationService"
            android:exported="false"/>
        -->
        <activity
            android:name=".controller.Party.PartyListActivity"
            android:label="@string/title_item_list" >
        </activity>
        <activity
            android:name=".controller.Party.PartyDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".controller.Party.PartyListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.Party.PartyListActivity" />
        </activity>
    </application>

</manifest>

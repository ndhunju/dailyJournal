<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ndhunju.dailyjournal"
    android:versionCode="17"
    android:versionName="7" >

    <uses-sdk
        android:minSdkVersion="1"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".controller.DailyJournalApplication"
        android:allowBackup="true"
        android:description="@string/app_descrip"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name=".controller.service.NotificationService"
            android:exported="false" />
        <service
            android:name=".controller.service.AutoBackupService"
            android:exported="false" />

        <activity android:name=".controller.HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.journal.JournalActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".controller.party.PartyListActivityOld"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".controller.party.PartyLedgerActivityOld"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".controller.party.PartyActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".viewPager.ViewPagerActivity"
            android:windowSoftInputMode="stateHidden" />

        <!-- https://developers.google.com/drive/android/java-client -->
        <activity
            android:name=".controller.lock.LockScreenActivity"
            android:label="@string/title_activity_lock_screen" />
        <activity
            android:name=".controller.party.PartyListActivity"
            android:label="@string/title_item_list"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".controller.party.PartyDetailActivity"
            android:label="@string/title_item_detail" >
        </activity>
        <activity
            android:name=".controller.preference.MyPreferenceActivity"
            android:label="@string/str_preference" />

        <receiver android:name=".controller.AlarmReceiver" >
        </receiver>

        <activity
            android:name=".controller.DashboardActivity"
            android:label="@string/title_activity_charts" >
        </activity>
    </application>

</manifest>

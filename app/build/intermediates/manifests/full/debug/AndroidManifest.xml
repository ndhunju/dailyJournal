<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ndhunju.dailyjournal"
    android:versionCode="9"
    android:versionName="5" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ganesh_book"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="com.ndhunju.dailyjournal.controller.NotificationService" />

        <activity
            android:name="com.ndhunju.dailyjournal.controller.HomeActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ndhunju.dailyjournal.controller.Journal.JournalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ndhunju.dailyjournal.controller.Party.PartyListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ndhunju.dailyjournal.controller.Party.JournalListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ndhunju.dailyjournal.controller.Party.PartyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ndhunju.dailyjournal.viewPager.ViewPagerActivity"
            android:screenOrientation="portrait" />

        <!-- https://developers.google.com/drive/android/java-client -->
        <activity
            android:name="com.ndhunju.dailyjournal.controller.ImportExport.ImportExportActivity"
            android:label="@string/title_activity_import_export"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ndhunju.dailyjournal.controller.LockScreenActivity"
            android:label="@string/title_activity_lock_screen"
            android:screenOrientation="portrait" >
        </activity>
        <!--
            <service android:name=".controller.NotificationService"
            android:exported="false"/>
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
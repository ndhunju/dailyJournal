<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ndhunju.dailyjournal"
    android:versionCode="4"
    android:versionName="3.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ganesh_book"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ndhunju.dailyjournal.controller.HomeActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ndhunju.dailyjournal.controller.JournalActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ndhunju.dailyjournal.controller.PartyListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ndhunju.dailyjournal.controller.PartyActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ndhunju.dailyjournal.controller.PartyInformationActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ndhunju.dailyjournal.viewPager.ViewPagerActivity"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="com.ndhunju.dailyjournal.controller.NotificationService" />

        <activity
            android:name="com.ndhunju.dailyjournal.controller.ImportExportActivity"
            android:exported="true"
            android:icon="@drawable/ic_ganesh_book_small"
            android:label="@string/title_activity_back_up"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.google.android.apps.drive.DRIVE_OPEN" />

                <data android:mimeType="file/.dj" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
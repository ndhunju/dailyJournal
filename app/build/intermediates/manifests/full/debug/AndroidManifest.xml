<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ndhunju.dailyjournal"
    android:versionCode="10"
    android:versionName="5.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:description="@string/app_descrip"
        android:icon="@drawable/ic_ganesh_book"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="com.ndhunju.dailyjournal.controller.NotificationService" />

        <activity
            android:name="com.ndhunju.dailyjournal.controller.HomeActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ndhunju.dailyjournal.controller.Journal.JournalActivity" />
        <activity android:name="com.ndhunju.dailyjournal.controller.Party.PartyListActivityOld" />
        <activity android:name="com.ndhunju.dailyjournal.controller.Party.PartyLedgerActivityOld" />
        <activity android:name="com.ndhunju.dailyjournal.controller.Party.PartyActivity" />
        <activity android:name="com.ndhunju.dailyjournal.viewPager.ViewPagerActivity" />

        <!-- https://developers.google.com/drive/android/java-client -->
        <activity
            android:name="com.ndhunju.dailyjournal.controller.ImportExport.ImportExportActivity"
            android:label="@string/title_activity_import_export" >
        </activity>
        <activity
            android:name="com.ndhunju.dailyjournal.controller.LockScreenActivity"
            android:label="@string/title_activity_lock_screen" >
        </activity>
        <!--
            <service android:name=".controller.NotificationService"
            android:exported="false"/>
        -->
        <activity
            android:name="com.ndhunju.dailyjournal.controller.Party.PartyListActivity"
            android:label="@string/title_item_list" >
        </activity>
        <activity
            android:name="com.ndhunju.dailyjournal.controller.Party.PartyDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.ndhunju.dailyjournal.controller.Party.PartyListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.Party.PartyListActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"
            android:id="@+id/dialog_preferences_passcodeCB"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_enable_pin_code_lock"
            android:layout_toRightOf="@id/dialog_preferences_passcodeCB"
            android:layout_toEndOf="@id/dialog_preferences_passcodeCB"
            android:layout_alignBaseline="@id/dialog_preferences_passcodeCB"
            android:id="@+id/dialog_preferences_passcodeTV"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_preferences_passcodeTV"
            android:id="@+id/dialog_preferences_passcodeFL"
            android:background="#ECECEC"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_pincode"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_preferences_passcodeET"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="#660000"
                android:ems="7"
                android:inputType="numberPassword"
                android:maxLength="7"
                />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_preferences_passcodeFL"
            android:id="@+id/dialog_preferences_lockTimeFL"
            android:background="#ECECEC"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_lock_after"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_preferences_lockTimeET"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="#660000"
                android:ems="2"
                android:inputType="number"
                android:maxLength="2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_minutes"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/dialog_preferences_lockTimeFL"
            android:background="#4485F4"/>
    </RelativeLayout>

</LinearLayout>

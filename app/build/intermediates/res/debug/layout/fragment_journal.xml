<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ndhunju.dailyjournal.JournalFragment" >

    <TextView
        android:id="@+id/fragment_journal_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fragment_journal_dr_cr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_dr"
            android:textSize="50sp" >
        </TextView>
        <EditText
            android:id="@+id/fragment_home_amount_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="#5CB85C"
            android:textSize="50sp" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/activity_home_date_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        />

    <Button
        android:id="@+id/fragment_home_merchant_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_party" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fragment_home_debit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_dr"
            android:textColor="#5CB85C" />

        <Button
            android:id="@+id/fragment_home_credit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_cr"
            android:textColor="#f63752" />
    </LinearLayout>

     <Button
        android:id="@+id/fragment_home_attach_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_select_attch" />
     
    <EditText
        android:id="@+id/fragment_home_note_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_note"
        />

    <Button
        android:id="@+id/fragment_home_save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_save"
        android:textColor="#0000F0" />

    <Button
        android:id="@+id/fragment_home_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_delete"
        android:textColor="#F00000"
        android:visibility="invisible" />

</LinearLayout><!-- From: file:/C:/Users/dhunju/workspace_opensource/dailyJournal/app/src/main/res/layout/fragment_journal.xml -->